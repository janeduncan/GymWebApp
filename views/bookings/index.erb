<h1>All Bookings</h1><br>

<table>
    <thead>
        <tr>
          <th>Name</th>
          <th>Class</th>
          <th>Time</th>
          <th>Date</th>
        </tr>
    </thead>

    <tbody>
        <% @bookings.each do |booking| %>
        <tr>
            <td><a href="/bookings/<%= booking.id %>"><%= booking.member.full_name() %></a></td>
            <td><%= booking.gym_session.gymclass() %> class</td>
            <td><%= booking.gym_session.class_time() %></td>
            <td><%= booking.gym_session.class_date() %></td>
        </tr>
        <% end %>
    </tbody>

</table>
